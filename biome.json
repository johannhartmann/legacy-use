{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": false },
  "files": { "ignoreUnknown": false },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "arrowParentheses": "asNeeded"
    }
  },
  "overrides": [
    {
      "includes": ["**/*.{js,jsx,ts,tsx}"],
      "javascript": {
        "globals": [
          "window",
          "console",
          "sessionStorage",
          "setInterval",
          "FileReader",
          "localStorage",
          "URLSearchParams",
          "globalThis",
          "setTimeout",
          "clearInterval",
          "Blob",
          "process",
          "navigator",
          "URL",
          "document"
        ]
      }
    }
  ],
  "assist": {
    "enabled": true,
    "actions": { "source": { "organizeImports": "on" } }
  }
}
